{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "newLine": "lf",
    "pretty": true,
    "skipLibCheck": true,
    "target": "es2020",
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"]
  },
  "exclude": ["src/templates/**/*"],
  "include": ["src/**/*", "utils.ts"]
}
